  <inherits name="org.uberfire.ext.apps.UberfireAppsClient"/>

  <!-- Form Modeler -->
  <inherits name="org.livespark.formmodeler.editor.FormModelerClient"/>
  <inherits name="org.livespark.formmodeler.rendering.FormModelerRenderingAPI"/>

  <inherits name="org.livespark.LiveSparkDeployment"/>

  <!-- Specify the application specific style sheet. -->
  <stylesheet src='css/livespark.css'/>

  <!-- Specify the paths for translatable code -->
  <source path='client'/>

  <!-- i18n -->
  <extend-property name="locale" values="es_ES"/>
  <extend-property name="locale" values="fr_FR"/>
  <extend-property name="locale" values="ja_JP"/>
  <extend-property name="locale" values="pt_BR"/>
  <extend-property name="locale" values="zh_CN"/>
  
  <collapse-all-properties />

</module>
