  <!-- security settings -->
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>download</web-resource-name>
      <url-pattern>/org.livespark.LiveSpark/archive</url-pattern>
      <url-pattern>/org.livespark.LiveSpark/defaulteditor/upload/*</url-pattern>
      <url-pattern>/org.livespark.LiveSpark/defaulteditor/download/*</url-pattern>
      <url-pattern>/org.livespark.LiveSpark/dtablexls/file</url-pattern>
      <url-pattern>/org.livespark.LiveSpark/scorecardxls/file</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>admin</role-name>
      <role-name>analyst</role-name>
    </auth-constraint>
  </security-constraint>

  <security-constraint>
    <web-resource-collection>
      <web-resource-name>console</web-resource-name>
      <url-pattern>/livespark.html</url-pattern>
      <url-pattern>/org.livespark.LiveSpark/*</url-pattern>
      <url-pattern>*.erraiBus</url-pattern>
      <url-pattern>/resourceList</url-pattern>
      <url-pattern>/editor</url-pattern>
