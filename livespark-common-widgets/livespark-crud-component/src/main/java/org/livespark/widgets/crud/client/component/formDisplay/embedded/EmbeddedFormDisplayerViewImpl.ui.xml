<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui">

  <ui:with field="i18n" type="org.livespark.widgets.crud.client.resources.i18n.CrudConstants"/>

  <ui:style>
    .center {
      float:none !important;
    }
  </ui:style>

  <g:FlowPanel>
    <b:Heading ui:field="heading" size="H3"/>
    <g:SimplePanel ui:field="content"></g:SimplePanel>
    <b:ButtonToolBar addStyleNames="text-center">
      <b:Button type="PRIMARY"
                ui:field="accept"
                addStyleNames="{style.center}">
        <ui:text from="{i18n.accept}"/>
      </b:Button>
      <b:Button ui:field="cancel"
                addStyleNames="{style.center}">
        <ui:text from="{i18n.cancel}"/>
      </b:Button>
    </b:ButtonToolBar>
  </g:FlowPanel>


</ui:UiBinder>
